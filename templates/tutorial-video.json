{
  "templateName": "EditTrax Tutorial",
  "templateType": "tutorial",
  "scriptTemplate": "Create a clear, engaging tutorial script for {productName} that walks users through {featureName}. Focus on how this feature empowers musicians to maintain ownership and control over their digital assets. Emphasize the on-chain benefits and simple workflow. The tutorial should be beginner-friendly but include technical terms relevant to blockchain and music production. End with practical examples of how this feature can benefit different types of creators.",
  "sections": [
    {
      "type": "intro",
      "duration": 8,
      "elements": [
        {
          "type": "visualEffect",
          "effect": "scanlines",
          "intensity": "low",
          "animation": "fadeIn"
        },
        {
          "type": "logo",
          "source": "{logoPath}",
          "position": "top-left",
          "animation": "slideIn"
        },
        {
          "type": "text",
          "content": "{productName}: {featureName} Tutorial",
          "position": "center",
          "style": "heading",
          "animation": "typewriter"
        },
        {
          "type": "text",
          "content": "Secure Your Music. Own Your Future.",
          "position": "bottom",
          "style": "subheading",
          "animation": "fadeIn"
        }
      ]
    },
    {
      "type": "overview",
      "duration": 10,
      "elements": [
        {
          "type": "image",
          "prompt": "A modern, dark-themed digital audio workstation interface with blockchain elements and purple/blue accent colors, showing {productName}'s main dashboard",
          "position": "fullscreen",
          "animation": "zoomIn"
        },
        {
          "type": "text",
          "content": "What You'll Learn Today",
          "position": "top",
          "style": "heading",
          "animation": "fadeIn"
        },
        {
          "type": "bulletPoints",
          "content": [
            "Setting up {featureName}",
            "Connecting your wallet",
            "Securing your tracks on-chain",
            "Monetizing your content"
          ],
          "position": "center-right",
          "style": "list",
          "animation": "slideRight"
        }
      ]
    },
    {
      "type": "stepByStep",
      "duration": 25,
      "elements": [
        {
          "type": "screenRecording",
          "source": "{screenRecordingPath}",
          "position": "fullscreen"
        },
        {
          "type": "callout",
          "content": "Important Steps",
          "position": "top-right",
          "style": "highlighted",
          "animation": "pulse"
        },
        {
          "type": "cursor",
          "animation": "follow"
        }
      ]
    },
    {
      "type": "demonstration",
      "duration": 12,
      "elements": [
        {
          "type": "splitScreen",
          "leftPrompt": "A musician using traditional methods to distribute music, looking frustrated with complex contracts and paperwork",
          "rightPrompt": "The same musician using {productName} with {featureName}, easily managing their music assets through a sleek interface with blockchain visualization",
          "animation": "slideUp"
        },
        {
          "type": "text",
          "content": "Before & After",
          "position": "top",
          "style": "heading",
          "animation": "fadeIn"
        },
        {
          "type": "visualEffect",
          "effect": "highlight",
          "target": "right",
          "animation": "pulse",
          "delay": 5
        }
      ]
    },
    {
      "type": "useCases",
      "duration": 10,
      "elements": [
        {
          "type": "imageSequence",
          "prompts": [
            "A DJ using {productName} to secure exclusive tracks for performances, interface showing blockchain verification, dark setting with purple accents",
            "An indie band releasing music directly to fans through {productName}, showing token-gated content access interface",
            "A producer collaborating remotely with artists, using {productName} to track contributions and royalties through smart contracts"
          ],
          "position": "center",
          "animation": "crossfade"
        },
        {
          "type": "lowerThird",
          "content": [
            "Live Performance Rights",
            "Direct-to-Fan Distribution",
            "Collaboration & Royalties"
          ],
          "style": "branded",
          "animation": "slideUp"
        }
      ]
    },
    {
      "type": "callToAction",
      "duration": 5,
      "elements": [
        {
          "type": "background",
          "color": "{primaryColor}",
          "animation": "fadeIn"
        },
        {
          "type": "text",
          "content": "Start Creating With True Ownership",
          "position": "center",
          "style": "heading",
          "color": "white",
          "animation": "pulse"
        },
        {
          "type": "text",
          "content": "{website}/get-started",
          "position": "bottom",
          "style": "subheading",
          "color": "{accentColor}",
          "animation": "fadeIn"
        },
        {
          "type": "logo",
          "source": "{logoPath}",
          "position": "top-right",
          "size": "small",
          "animation": "none"
        }
      ]
    }
  ],
  "audioOptions": {
    "music": "minimal tech ambient",
    "voiceGender": "MALE",
    "soundEffects": ["interface", "digital", "success", "transition"]
  }
} 